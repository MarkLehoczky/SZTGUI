<Window x:Class="Workshop03.TrooperEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workshop03"
        mc:Ignorable="d"
        Title="Trooper Editor" Height="285" Width="350">
    <StackPanel>
        <Label Content="Power" Height="35" Padding="5" VerticalContentAlignment="Center" FontWeight="Bold" Background="LightBlue"/>
        <TextBox x:Name="tbox_power" Height="35" Padding="15 5 5 5" VerticalContentAlignment="Center"/>
        <Label Content="Vitality" Height="35" Padding="5" VerticalContentAlignment="Center" FontWeight="Bold" Background="LightBlue"/>
        <TextBox x:Name="tbox_vitality" Height="35" Padding="15 5 5 5" VerticalContentAlignment="Center"/>
        <Label Content="Cost" Height="35" Padding="5" VerticalContentAlignment="Center" FontWeight="Bold" Background="LightBlue"/>
        <TextBox x:Name="tbox_cost" Height="35" Padding="15 5 5 5" VerticalContentAlignment="Center"/>
        <Button Content="Save" Height="35" FontWeight="Bold" Click="SaveClick"/>
    </StackPanel>
</Window>
